<h1>Welcome!</h1>
<h2>Register</h2>
<%=form_for(@user) do |f| %>
	<%=f.label :name %>
	<%=f.text_field :name %><br>
	<%=f.label :alias %>
	<%=f.text_field :alias %><br>
	<%=f.label :email %>
	<%=f.text_field :email %><br>
	<%=f.label :password %>
	<%=f.text_field :password %><br>
	<%=f.label :password_confirmation %>
	<%=f.text_field :password_confirmation %><br>
	<%=f.submit "Register" %>
<% end %>
<hr>
<h2>Login</h2>
<% if flash[:notice] %>
	<%=flash[:notice] %>
<% end %>
<%=form_for @user, url: {action: 'login'}  do |f| %>
	<%=f.label :email %>
	<%=f.text_field :email %><br>
	<%=f.label :password %>
	<%=f.text_field :password %>
	<%=f.submit "Login" %>
<% end %>